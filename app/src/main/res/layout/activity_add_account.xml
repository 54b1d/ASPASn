<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.sabid.aspasn.AddAccountActivity">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>

	</com.google.android.material.appbar.AppBarLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:layout_below="@+id/appBar">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="10dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Please enter the details below"
				android:textSize="24dp"
				android:id="@+id/txtTitle"
				android:layout_marginTop="20dp"
				android:layout_below="@+id/appBar"/>

			<Spinner
				android:id="@+id/spinnerAccountType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/txtTitle"/>

			<EditText
				android:layout_width="match_parent"
				android:inputType="textPersonName"
				android:layout_height="wrap_content"
				android:ems="10"
				android:layout_below="@+id/spinnerAccountType"
				android:id="@+id/editName"
				android:hint="Name"/>

			<EditText
				android:layout_width="match_parent"
				android:inputType="textPostalAddress"
				android:layout_height="wrap_content"
				android:ems="10"
				android:layout_below="@id/editName"
				android:id="@+id/editAddress"
				android:hint="Address"/>

			<EditText
				android:layout_width="match_parent"
				android:inputType="phone"
				android:layout_height="wrap_content"
				android:ems="10"
				android:layout_below="@id/editAddress"
				android:hint="Mobile"
				android:id="@+id/editMobile"/>

			<EditText
				android:layout_width="wrap_content"
				android:inputType="numberDecimal"
				android:layout_height="wrap_content"
				android:ems="10"
				android:layout_below="@id/editMobile"
				android:id="@+id/editPayable"
				android:hint="Payable"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Submit"
				android:layout_below="@id/editPayable"
				android:id="@+id/btnConfirmAddAccount"
				android:layout_centerInParent="true"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Go Back"
				android:layout_below="@id/btnConfirmAddAccount"
				android:id="@+id/btnViewAccounts"
				android:layout_centerInParent="true"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Add Category"
				android:layout_toRightOf="@id/spinnerAccountType"
				android:layout_below="@id/txtTitle"
				android:id="@+id/btnAddAccountType"/>

			<EditText
				android:layout_width="wrap_content"
				android:inputType="numberDecimal"
				android:layout_height="wrap_content"
				android:ems="10"
				android:layout_toRightOf="@id/editPayable"
				android:layout_below="@+id/editMobile"
				android:hint="Recievable"
				android:id="@+id/editRecievable"/>

		</RelativeLayout>

	</ScrollView>

</RelativeLayout>

