<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.sabid.aspasn.AddCashTransactionActivity">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>

	</com.google.android.material.appbar.AppBarLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:layout_below="@+id/appBar">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="10dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Please enter the details below"
				android:textSize="24dp"
				android:id="@+id/txtTitle"
				android:layout_marginTop="20dp"
				android:layout_below="@+id/appBar"/>

			<DatePicker
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/txtTitle"
				android:id="@+id/datePicker"/>

			<AutoCompleteTextView
				android:id="@+id/editAutoName"
				android:layout_below="@+id/datePicker"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"/>

			<EditText
				android:layout_width="wrap_content"
				android:inputType="number"
				android:layout_height="wrap_content"
				android:ems="10"
				android:layout_below="@id/editAutoName"
				android:id="@+id/editAmount"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Receipt"
				android:id="@+id/btnConfirmCashReceiptTransaction"
				android:layout_below="@id/editAmount"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Payment"
				android:id="@+id/btnConfirmPaymentTransaction"
				android:layout_below="@id/editAmount"
				android:layout_toEndOf="@id/btnConfirmCashReceiptTransaction"/>

		</RelativeLayout>

	</ScrollView>

</RelativeLayout>

