<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.sabid.aspasn.DebugButtonsActivity">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>

	</com.google.android.material.appbar.AppBarLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:layout_below="@+id/appBar">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="bottom">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Please enter the details below"
				android:textSize="24dp"
				android:id="@+id/txt_title"
				android:layout_marginTop="20dp"
				android:layout_below="@+id/appBar"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Add Account"
				android:layout_below="@id/txt_title"
				android:id="@+id/btnActivityAddAccount" />

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Calculator"
				android:layout_below="@id/btnActivityAddAccount"
				android:id="@+id/btnActivityCalc"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Add Cash Transaction"
				android:layout_below="@id/btnActivityCalc"
				android:id="@+id/btnActivityAddCashTransaction"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Add Inventory Item"
				android:layout_below="@id/btnActivityAddCashTransaction"
				android:id="@+id/btnActivityAddInventoryItem"/>

            <Button
                android:id="@+id/btnActivityAddExpenseAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnActivityAddInventoryItem"
                android:text="Add Expense Account" />
		</RelativeLayout>

	</ScrollView>

</RelativeLayout>

