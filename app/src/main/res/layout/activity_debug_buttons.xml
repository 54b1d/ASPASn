<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.sabid.aspasn.DebugButtonsActivity">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:layout_below="@+id/appBar">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="bottom">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Please enter the details below"
				android:textSize="24dp"
				android:id="@+id/txt_title"
				android:layout_marginTop="20dp"
				android:layout_below="@+id/appBar"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Accounts"
				android:layout_below="@id/txt_title"
				android:id="@+id/btnActivityAccounts"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="All Transactions"
				android:layout_below="@id/btnActivityAccounts"
				android:id="@+id/btnActivityTransactions"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Add Cash Transaction"
				android:layout_below="@id/btnActivityTransactions"
				android:id="@+id/btnActivityAddCashTransaction"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Add Inventory Item"
				android:layout_below="@id/btnActivityAddCashTransaction"
				android:id="@+id/btnActivityAddInventoryItem"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Add Invoice"
				android:layout_below="@id/btnActivityAddInventoryItem"
				android:id="@+id/btnActivityAddInvoice"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Accounting Periods"
				android:layout_below="@id/btnActivityAddInvoice"
				android:id="@+id/btnActivityAccountingPeriods"/>

			<Button
				android:id="@+id/btnAddJournalEntry"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/btnActivityAccountingPeriods"
				android:text="Add Journal Entry"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="AddAsOwner"
				android:layout_below="@id/btnAddJournalEntry"
				android:id="@+id/btnAddOwner"/>

			<Button
				android:id="@+id/btnAddCashBankAccountActivity"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/btnAddOwner"
				android:text="Add Cash Bank" />

		</RelativeLayout>

	</ScrollView>

</RelativeLayout>

