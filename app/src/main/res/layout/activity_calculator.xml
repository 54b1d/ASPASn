<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.sabid.aspasn.Activities.CalculatorActivity">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:layout_below="@+id/appBar">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Please enter the details below"
				android:textSize="24dp"
				android:id="@+id/txtTitle"
				android:layout_marginTop="20dp"
				android:layout_below="@+id/appBar"/>

			<EditText
				android:layout_width="wrap_content"
				android:inputType="number"
				android:layout_height="wrap_content"
				android:ems="10"
				android:layout_below="@id/txtTitle"
				android:id="@+id/editPrice1"/>

			<EditText
				android:layout_width="wrap_content"
				android:ems="10"
				android:layout_height="wrap_content"
				android:layout_below="@id/editPrice1"
				android:id="@+id/editPrice2"/>

			<EditText
				android:layout_width="wrap_content"
				android:ems="10"
				android:layout_height="wrap_content"
				android:layout_below="@id/editPrice2"
				android:id="@+id/editPrice3"/>

			<EditText
				android:layout_width="wrap_content"
				android:inputType="number"
				android:layout_height="wrap_content"
				android:ems="10"
				android:layout_toRightOf="@id/editPrice1"
                android:layout_below="@+id/txtTitle"/>

		</RelativeLayout>

	</ScrollView>

</RelativeLayout>

